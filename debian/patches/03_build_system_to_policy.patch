Description: Make upstream buildsystem smarter with Debian policy.
 Make the Makefile behave on a smarter way within Debian policy requirements (4.9.1).
 * Don't strip the binary here (done by dh_strip)
 * s/CCFLAGS/CFLAGS/g : Let dpkg-buildpackage define CFLAGS.
Origin: other
Author: Didier Raboud <didier@raboud.com>
Last-Update: 2009-07-02

Index: usb-modeswitch/Makefile
===================================================================
--- usb-modeswitch.orig/Makefile	2009-05-29 16:34:07.000000000 +0200
+++ usb-modeswitch/Makefile	2009-05-29 16:35:42.000000000 +0200
@@ -2,7 +2,7 @@
 VERS        = 0.9.7
 STRIP	    = strip
 CC          = gcc
-CCFLAGS     = -l usb
+CFLAGS     += -l usb
 RM          = /bin/rm -f
 OBJS        = usb_modeswitch.c
 PREFIX	    = $(DESTDIR)/usr
@@ -12,8 +12,7 @@
 .PHONY:     clean
 all:        $(PROG)
 $(PROG):    $(OBJS)
-	      $(CC) $(CCFLAGS) -o $(PROG) $(OBJS)
-	      $(STRIP) $(PROG)
+	      $(CC) $(CFLAGS) -o $(PROG) $(OBJS)
 
 clean:
 	      $(RM) ./usb_modeswitch
